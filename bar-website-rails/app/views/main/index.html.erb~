							/*			
							$('.barSquare').animate(
							{
							opactiy: 1,
							left: "-=10px"
							}, 800);
							*/
			
							//Deals with fading on hovering
							$(document).on('mouseenter', '.barSquare', function () {
								$("> img", this).stop();
								$("> p", this).stop();
								$("> img", this).fadeTo('fast', 0.5);
								$("> img", this).addClass("imgHovered");
								$("> p", this).fadeTo('slow', 1);
							}).on('mouseleave', '.barSquare', function() { 
								$("> img", this).stop();
								$("> p", this).stop();
								$("> img", this).fadeTo('fast', 1); 
								$("> img", this).removeClass("imgHovered");
								$("> p", this).fadeTo('slow', 0);
							});
						});
        			</script>
