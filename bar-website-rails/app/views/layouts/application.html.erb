<!DOCTYPE html>
<html>
<head>
  <title>BarWebsiteRails</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="bootstrap.css">
  <link rel="stylesheet" type="text/css" href="main_style_sheet.css">
</head>
<body class="body-background">
	<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
	<script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js"></script>
	<script src="bootstrap.js”"> </script>
	<div class="container">
		<div class="navbar navbar-default navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<ul class="nav">
						<li id="BarMenu"><%= link_to 'Bars', main_path %></li>
						<li id="CalendarMenu"><%= link_to 'Calendar', calendar_index_path %></li>
					</ul>  
					<ul class="nav pull-right">
						<%=form_tag({controller: "main", action: "index"}, method: "get", class: "navbar-search pull-right") do %>
							<input type="text" class="search-query" placeholder="Bar Name" name="bar_search"> 
						<% end %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="span12" style="height:60px">
				<!--<h1><%= link_to 'Bar Website!', main_path %></h1>-->
			</div>
		</div>
		
		
	<%= yield %>
	
	</div>

</body>
</html>
